  %br
%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th.col-md-2 Nazwa:
      %th Akcje:
  %tbody
    - trainings.each do |training|
      %tr
        %td
          = training.name
        %td
          = training.description
        %td{ style: 'text-align: center' }
          .btn-group
            = link_to 'Edytuj', edit_training_path(training.id), class: 'btn-primary btn', role: 'button'
            = link_to 'Usu≈Ñ', training_path(training.id), method: 'DELETE', class: 'btn-danger btn', role: 'button'
